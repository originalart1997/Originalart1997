<script>
// Data Chapter
const chapters = [
  {title:"Chapter 1", content:"Awal perjalanan di dunia baru. Tantangan pertama muncul."},
  {title:"Chapter 2", content:"Pertemuan dengan karakter baru dan konflik pertama."},
  {title:"Chapter 3", content:"Misi besar dan pertarungan mendebarkan."},
  {title:"Chapter 4", content:"Pertemuan dengan musuh utama."},
  {title:"Chapter 5", content:"Perjuangan menuju tujuan besar."}
];

// Render chapter
const chapterContainer = document.getElementById('chapter-list');
chapters.forEach(ch=>{
    const div=document.createElement('div');
    div.className='card';
    div.onclick=()=>openModal(ch.title,ch.content);
    div.innerHTML=`<h3>${ch.title}</h3><p>Klik untuk baca lebih lengkap.</p>`;
    chapterContainer.appendChild(div);
});

// Data Karakter
const characters=[
  {name:"Karakter 1", img:"https://via.placeholder.com/250x250.png?text=Karakter+1", desc:"Kepribadian: Pemberani, cerdas. Kemampuan: Sihir api dan pedang."},
  {name:"Karakter 2", img:"https://via.placeholder.com/250x250.png?text=Karakter+2", desc:"Kepribadian: Tenang, analitis. Kemampuan: Sihir es dan strategi."},
  {name:"Karakter 3", img:"https://via.placeholder.com/250x250.png?text=Karakter+3", desc:"Kepribadian: Lucu, ramah. Kemampuan: Penyembuhan dan alkimia."}
];

// Render karakter
const characterContainer=document.getElementById('character-list');
characters.forEach(ch=>{
  const div=document.createElement('div');
  div.className='card';
  div.innerHTML=`<img src="${ch.img}" alt="${ch.name}" class="character-img"><h3>${ch.name}</h3><p>${ch.desc}</p>`;
  characterContainer.appendChild(div);
});

// Data Galeri
const gallery=[
  "https://via.placeholder.com/800x400.png?text=Ilustrasi+1",
  "https://via.placeholder.com/800x400.png?text=Ilustrasi+2",
  "https://via.placeholder.com/800x400.png?text=Ilustrasi+3",
  "https://via.placeholder.com/800x400.png?text=Ilustrasi+4"
];

// Render galeri
const galleryContainer=document.getElementById('gallery-list');
gallery.forEach(src=>{
  const div=document.createElement('div');
  div.className='slide';
  div.innerHTML=`<img src="${src}" alt="Ilustrasi">`;
  galleryContainer.appendChild(div);
});

// Slider
let slideIndex=0;
function showSlide(index){
  const slides=document.querySelectorAll('.slide');
  if(index>=slides.length) slideIndex=0;
  if(index<0) slideIndex=slides.length-1;
  else slideIndex=index;
  document.querySelector('.slides').style.transform='translateX('+-slideIndex*100+'%)';
}
function nextSlide(){showSlide(slideIndex+1);}
function prevSlide(){showSlide(slideIndex-1);}
setInterval(nextSlide,5000);

// Modal
function openModal(title,text){
  document.getElementById('modal-title').innerText=title;
  document.getElementById('modal-text').innerText=text;
  document.getElementById('modal').style.display='flex';
}
function closeModal(){
  document.getElementById('modal').style.display='none';
}
