<!-- Firebase Modules -->
<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/12.2.1/firebase-app.js";
import { getDatabase, ref, push, set, onValue } from "https://www.gstatic.com/firebasejs/12.2.1/firebase-database.js";

const firebaseConfig = {
  apiKey: "AIzaSyAkJQKqwfFBeQ8wuG-n_ZY1Bw-JCTd6ijU",
  authDomain: "originalart-1d5ae.firebaseapp.com",
  databaseURL: "https://originalart-1d5ae-default-rtdb.firebaseio.com",
  projectId: "originalart-1d5ae",
  storageBucket: "originalart-1d5ae.firebasestorage.app",
  messagingSenderId: "102758038534",
  appId: "1:102758038534:web:32338bf54be17aca929787",
  measurementId: "G-3FVKNW65X4"
};

const app = initializeApp(firebaseConfig);
const db = getDatabase(app);

let replyToId = null;

function addEmoji(emoji) {
  const input = document.getElementById("message");
  input.value += emoji;
  input.focus();
}

function postComment() {
  const username = document.getElementById("username").value.trim() || "Anonim";
  const message = document.getElementById("message").value.trim();
  if(!message) return;

  const newCommentRef = push(ref(db, "comments"));
  set(newCommentRef, {
    username: username,
    text: message,
    timestamp: new Date().toLocaleString(),
    parentId: replyToId
  });

  document.getElementById("message").value = "";
  replyToId = null;
}

const commentsDiv = document.getElementById("comments");
onValue(ref(db, "comments"), snapshot => {
  const data = snapshot.val() || {};
  commentsDiv.innerHTML = "";

  function renderComments(parentId=null, container=commentsDiv) {
    for(let id in data) {
      const c = data[id];
      if(c.parentId === parentId) {
        const div = document.createElement("div");
        div.className = parentId ? "reply" : "comment";
        div.innerHTML = `
          <strong>${c.username}</strong>
          <span>${c.text}</span><br>
          <small>${c.timestamp}</small>
          <button onclick="reply('${id}')">Balas</button>
        `;
        container.appendChild(div);
        renderComments(id, div);
      }
    }
  }

  renderComments();
});

function reply(id) {
  replyToId = id;
  const input = document.getElementById("message");
  input.focus();
  input.value = "@reply ";
}
</script>

